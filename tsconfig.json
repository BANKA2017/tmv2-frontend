{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite-plugin-pwa/client", "node"],
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "WebWorker"
    ]
  },
  "include": [
    "*.js",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.vue",
    "apps/**/*.ts",
    "apps/**/*.js"
  ]
}
